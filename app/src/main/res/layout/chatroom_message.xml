<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMsgDateTime"
        android:layout_width="90dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewChatMsgOwnerName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewChatMsgOwnerName" />

    <ImageView
        android:id="@+id/imageViewMsgOwner"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="@+id/message_text"
        app:layout_constraintTop_toBottomOf="@+id/message_text"
        tools:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/textViewChatMsgOwnerName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewMsgOwner"
        app:layout_constraintStart_toEndOf="@+id/imageViewMsgOwner" />

    <ImageView
        android:id="@+id/imageLikes"
        android:layout_width="41dp"
        android:layout_height="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toEndOf="@+id/message_text"
        app:layout_constraintTop_toTopOf="@+id/message_text"
        tools:srcCompat="@drawable/like"
        android:src="@drawable/like" />

    <TextView
        android:id="@+id/textViewMsgLikes"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageLikes"
        app:layout_constraintStart_toStartOf="@+id/imageLikes"
        app:layout_constraintTop_toBottomOf="@+id/imageLikes" />

</androidx.constraintlayout.widget.ConstraintLayout>